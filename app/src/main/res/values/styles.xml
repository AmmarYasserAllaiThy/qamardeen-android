<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- generic header text -->
    <style name="qamar_hdr">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- day of week -->
    <style name="day_of_week">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- day of week -->
    <style name="day_of_week_arabic" parent="day_of_week">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- prayer extended header text -->
    <style name="prayer_extended_hdr" parent="qamar_hdr">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- popup -->
    <style name="popup_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popup_row_style" parent="popup_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- qamar row text -->
    <style name="qamar_row_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ayah image text (for quran) -->
    <style name="qamar_ayah_image_text" parent="qamar_row_text">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- count text (for quran) -->
    <style name="quran_ayah_count_text" parent="qamar_row_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/pinned_hdr_background</item>
    </style>

    <!-- read suras text (for quran extra view) -->
    <style name="quran_extra_sura_text" parent="qamar_row_text">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- dates (for graph/stats view) -->
    <style name="graph_stats_date_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="graph_stats_datepick_text" parent="graph_stats_date_text">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- My Custom Styles -->
    <style name="Ctrl_Grid_View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Ctrl_Grid_View.TV_Key">
        <item name="android:layout_column">0</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Ctrl_Grid_View.TV_Value">
        <item name="android:layout_column">1</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <!--        <item name="android:layout_marginEnd">8dp</item>-->
        <item name="android:text">0</item>
        <item name="android:background">@color/hdr_background</item>
    </style>

    <style name="Ctrl_Grid_View.ET">
        <item name="android:layout_column">2</item>
        <item name="android:inputType">number</item>
        <item name="android:editable">true</item>
        <item name="android:hint">prayed</item>
        <item name="android:background">@color/hdr_background</item>
    </style>


    <style name="Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

</resources>